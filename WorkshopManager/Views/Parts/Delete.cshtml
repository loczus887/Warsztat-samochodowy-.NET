@model WorkshopManager.DTOs.PartDto

@{
    ViewData["Title"] = "Usuń część";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">@ViewData["Title"]</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle"></i>
                    Czy na pewno chcesz usunąć tę część z katalogu?
                </div>

                <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Name)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Category)</dt>
                    <dd class="col-sm-8">
                        @if (!string.IsNullOrEmpty(Model.Category))
                        {
                            <span class="badge bg-info">@Model.Category</span>
                        }
                        else
                        {
                            <span class="text-muted">Brak kategorii</span>
                        }
                    </dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.UnitPrice)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.UnitPrice, "{0:C}")</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.UsageCount)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.UsageCount)</dd>
                </dl>

                @if (Model.UsageCount > 0)
                {
                    <div class="alert alert-warning">
                        <strong>Uwaga!</strong> Ta część została użyta w @Model.UsageCount zleceniu/ach.
                        Usunięcie części może wpłynąć na istniejące zlecenia serwisowe.
                    </div>
                }

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Anuluj
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Usuń część
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>