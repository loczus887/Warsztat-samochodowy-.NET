@model WorkshopManager.DTOs.ServiceTaskDto

@{
    ViewData["Title"] = "Edytuj zadanie serwisowe";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">@ViewData["Title"]</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="ServiceOrderId" />

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="4"
                                  placeholder="Opisz czynność serwisową do wykonania..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="LaborCost" class="form-label"></label>
                        <div class="input-group">
                            <input asp-for="LaborCost" class="form-control" type="number" step="0.01" min="0" />
                            <span class="input-group-text">zł</span>
                        </div>
                        <span asp-validation-for="LaborCost" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-controller="ServiceOrders" asp-action="Details" asp-route-id="@Model.ServiceOrderId"
                           class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Powrót do zlecenia
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-save"></i> Aktualizuj zadanie
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}