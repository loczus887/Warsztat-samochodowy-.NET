@model IEnumerable<WorkshopManager.DTOs.CustomerDto>

@{
    ViewData["Title"] = "Klienci";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Dodaj nowego klienta
    </a>
</div>

<form asp-action="Index" method="get" class="mb-3">
    <div class="row">
        <div class="col-md-6">
            <div class="input-group">
                <input type="text" name="searchString" value="@ViewData["CurrentFilter"]"
                       class="form-control" placeholder="Szukaj klienta...">
                <button class="btn btn-outline-secondary" type="submit">
                    <i class="fas fa-search"></i> Szukaj
                </button>
            </div>
        </div>
        @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
        {
            <div class="col-md-2">
                <a asp-action="Index" class="btn btn-outline-secondary">Wyczyść</a>
            </div>
        }
    </div>
</form>

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Imię</th>
                            <th>Nazwisko</th>
                            <th>Telefon</th>
                            <th>Email</th>
                            <th>Liczba pojazdów</th>
                            <th>Akcje</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var customer in Model)
                        {
                            <tr>
                                <td>@customer.FirstName</td>
                                <td>@customer.LastName</td>
                                <td>@customer.PhoneNumber</td>
                                <td>@customer.Email</td>
                                <td>@customer.VehicleCount</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@customer.Id"
                                           class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-eye"></i> Szczegóły
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@customer.Id"
                                           class="btn btn-sm btn-outline-warning">
                                            <i class="fas fa-edit"></i> Edytuj
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@customer.Id"
                                           class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash"></i> Usuń
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="fas fa-users fa-3x text-muted mb-3"></i>
                <h5>Brak klientów</h5>
                <p class="text-muted">
                    @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
                    {
                        <span>Nie znaleziono klientów pasujących do wyszukiwania.</span>
                    }
                    else
                    {
                        <span>Nie dodano jeszcze żadnych klientów.</span>
                    }
                </p>
            </div>
        }
    </div>
</div>